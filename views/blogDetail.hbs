<div class="post-detail">
    <h2>{{blog.title}}</h2>
    <p>{{blog.content}}</p>
    <div class="btn-group">
        <a class="del" href="http://localhost:5000/delete/{{blog.id}}">Delete</a>
        <a class="edit" href="http://localhost:5000/edit/{{blog.id}}">Edit</a>
    </div>
    <h3>Comments</h3>
    <form action="http://localhost:5000/{{blog.id}}/addComment" method="post" class="comment-form">
        <input type="text" placeholder="Comment here.." name="comment"/>
        <input type="submit" value="Gá»­i"/>
    </form>
    <ul class="comments">
        {{#each blog.comments}}
        <li>
            {{this}}
        </li>
        {{/each}}
    </ul>
</div>